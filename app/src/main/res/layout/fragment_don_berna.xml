<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mecalogik.help_travel.DonBernaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagePrin"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ht" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/imagePrin"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagePrin"
                app:srcCompat="@color/colorPrimary" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imagePrin"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Las Historias de Don Berna"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5"
                android:theme="@style/RatingBar" />

            <Button
                android:id="@+id/resrvarbtnDonBerna"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttondos"
                android:layout_marginTop="40dp"
                android:textSize="15sp"
                android:text="DA clic y reserva" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/resrvarbtnDonBerna"
                android:layout_alignBottom="@+id/resrvarbtnDonBerna"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:background="@drawable/buttondos"
                android:textSize="12sp"
                android:text="Facebook" />

            <Button
                android:id="@+id/ubicacionbtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/resrvarbtnDonBerna"
                android:layout_alignBottom="@+id/resrvarbtnDonBerna"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:background="@drawable/buttondos"
                android:text="Ubicación "
                android:textSize="12sp" />



            <LinearLayout
                android:layout_below="@+id/resrvarbtnDonBerna"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@android:color/white">




                <TextView
                    android:text="Recorrido"
                    android:textColor="#00a6ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:text="Museo de las leyendas más enigmáticas del pueblo Bernal acompañadas con maqueta robotizadas, cuentan con movimiento luz y sonido."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:text="Entradas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00a6ff"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:text="General – $25, Menores de 5 años – Gratis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Horario:"
                    android:textColor="#00a6ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:text="Martes – Domingo\n10:00 am – 6:00 pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Teléfono"
                    android:textColor="#00a6ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:text="441-296-46-73"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Dirección"
                    android:textColor="#00a6ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:text="Calle mesón # 16A – A un costado de taxi motos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/imageDonTours"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ht" />



            </LinearLayout>


        </RelativeLayout>


    </ScrollView>



</android.support.constraint.ConstraintLayout>
